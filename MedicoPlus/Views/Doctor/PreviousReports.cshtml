
@using System.Data;
@model DataTable
@{
    ViewBag.Title = "PreviousReports";
    DataTable reports = (DataTable)ViewBag.Reports;
    Layout = "~/Views/Shared/_medicoDoctor.cshtml";
    DataTable city = (DataTable)ViewBag.City;
    DataTable Area = (DataTable)ViewBag.Area;
}

<h2>Previously Submitted Reports</h2>
<div class="breadcrumb"></div>

<div class="col-md-12 card-box" id="#Pending">
    

    <table class="table p-20 table-striped m-0">
        <thead>
            <tr>
                <th>Disease Name</th>
                <th>Patient Name</th>
                <th>Gender</th>
                <th>Patient Address</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < reports.Rows.Count; i++)
            {
                <tr>
                    <td>@reports.Rows[i]["DiseaseName"]</td>
                    <td>@reports.Rows[i]["PatientName"]</td>
                    <td>@reports.Rows[i]["Gender"]</td>
                    <td>@reports.Rows[i]["PatientAddress"]</td>

                </tr>
            }
        </tbody>
    </table>
</div>
