@using System.Data;
@model DataTable
@{
    ViewBag.Title = "AddReport";
    DataTable reports =(DataTable) ViewBag.Reports;
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}


        <div class="col-md-6">
            <h2>Add Report</h2>
    <form action="/Doctor/AddReport" method="Post" enctype="multipart/form-data" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="PatientName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Address</label>
            <div class="col-md-10">
                <textarea class="form-control" rows="5" name="PatientAddress"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Disease</label>
            <div class="col-sm-10">
            <select name="DiseaseId" class="form-control">
                @for (int i = 0; i < Model.Rows.Count; i++)
                {
                    <option value="@Model.Rows[i]["DiseaseId"]">@Model.Rows[i]["DiseaseName"]</option>
                }
            </select></div>
        </div><div align="right">
        <button  type="submit" class="btn btn-purple waves-effect waves-light">Submit</button></div>

        <br />
        <br />
    </form>
</div>
<div class="col-md-10">
<h2>Previously Submitted Reports</h2>
<table class="table table-striped m-0">
    <thead>
        <tr>
            <th>Disease Name</th>
            <th>Patient Name</th>
            <th>Patient Address</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < reports.Rows.Count; i++)
        {
            <tr>
                <td>@reports.Rows[i]["DiseaseName"]</td>
                <td>@reports.Rows[i]["PatientName"]</td>
                <td>@reports.Rows[i]["PatientAddress"]</td>

            </tr>
        }
    </tbody>
</table>
</div>
<div class="col-md-6">
    
    <form action="/Doctor/ExportData" method="Post" enctype="multipart/form-data" class="form-horizontal" role="form">
        <div align="center">
            <button type="submit" class="btn btn-purple waves-effect waves-light">Export</button>
        </div>

        <br />
        <br />
    </form>
</div>