@using System.Data
@using MedicoPlus.Models
@model DoctorModel
@{
    DataTable sp = (DataTable)ViewBag.sp;
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_medicoDoctor.cshtml";
}
<div class="col-sm-2"></div>
<div class="col-sm-8">
    <div class="card-box">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal m-t-20" action="/Doctor/EditProfile" method="post" enctype="multipart/form-data">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            
                            <input class="form-control" type="text" required="" placeholder="Registration Number" name="RegNO" value="@Model.RegistrationNo">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Name" name="DocName" value="@Model.DocName">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="email" required="" placeholder="Email" name="Email" value="@Model.Email">
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required="" placeholder="Password" name="Password" value="@Model.Password">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <div class="checkbox checkbox-custom">
                                <input id="IsActive" type="checkbox" checked="" name="Isactive">
                                <label for="IsActive">
                                    IsActive
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <textarea class="form-control" required="" placeholder="Your introduction here." name="Intro">@Model.Intro</textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input type="file" class="filestyle" name="Photo" data-iconname="fa fa-cloud-upload" id="filestyle-6" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                            <div class="bootstrap-filestyle input-group">
                                <input type="text" class="form-control " placeholder="Upload Your Photo" disabled="">
                                <span class="group-span-filestyle input-group-btn" tabindex="0">
                                    <label for="filestyle-6" class="btn btn-default ">
                                        <span class="icon-span-filestyle fa fa-cloud-upload"></span>
                                        <span class="buttonText">Choose file</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Documents URL" name="Documents" value="@Model.Documents">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Gender: </label>
                        <div class="col-md-10">

                            
                            <div class="radio radio-info radio-inline">
                                <input type="radio" id="inlineRadio1" value="Male" name="Gender">
                                <label for="inlineRadio1"> Male </label>
                            </div>
                            <div class="radio radio-inline">
                                <input type="radio" id="inlineRadio2" value="Female"checked="" name="Gender">
                                <label for="inlineRadio2"> Female </label>
                            </div>
                            

                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" minlength="10" maxlength="10" placeholder="Mobile Number" name="Mobile" value="@Model.Mobile">
                        </div>
                    </div>
                    



                    <div class="form-group">
                        <div class="col-xs-12">
                            Speciality
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <select class="form-control" name="SpecialityId">
                                @for (int i = 0; i < sp.Rows.Count; i++)
                                {
                                    if (Model.SpecialityId == Convert.ToInt32(sp.Rows[i]["SpecialityId"]))
                                    {
                                     <option value=@sp.Rows[i]["SpecialityId"] selected="selected">@sp.Rows[i]["SpName"]</option>
                                    }
                                    else
                                    {
                                        <option value=@sp.Rows[i]["SpecialityId"]>@sp.Rows[i]["SpName"]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Qualification" name="Qualification" value="@Model.Qualification">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="number" required="" placeholder="Minimum Consultation Fee" name="mcf" value="@Model.MinConsultationFee">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="number" required="" placeholder="Maximum appoinments per hour" name="maph" value="@Model.MaxApptPerHour">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-40">
                        <div class="col-xs-12">
                            <button class="btn btn-pink btn-block text-uppercase waves-effect waves-light" type="submit">
                                Update
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    
    </div>
</div>