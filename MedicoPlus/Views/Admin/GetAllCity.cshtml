@using System.Data
@model DataTable

@{
    ViewBag.Title = "GetAllCity";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<h2>GetAllCity</h2>

<table  class="table table-striped m-0">
    <thead>
        <tr>
            <td>CityId</td>
            <td>CityName</td>
            <td>IsActive</td>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i<Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i]["CityId"]</td>
                <td><a href="CityDetails/@Model.Rows[i]["CityId"]">@Model.Rows[i]["CityName"]</a></td>
                <td>@Model.Rows[i]["IsActive"]</td>
            </tr>
        }
        
    </tbody>

    <tfoot>

    </tfoot>
</table>
