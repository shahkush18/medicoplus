@using System.Data
@model DataTable

@{
    ViewBag.Title = "GetAllZone";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<h2>GetAllZone</h2>
<table class="table table-striped m-0">
    <thead>
        <tr>
            <td>ZoneId</td>
            <td>ZoneName</td>
            <td>City Name</td>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i]["ZoneId"]</td>
                <td><a href="ZoneDetails/@Model.Rows[i]["ZoneId"]">@Model.Rows[i]["Zonename"]</a></td>
                <td>@Model.Rows[i]["CityName"]</td>
                <td><a href="/Admin/EditZone/@Model.Rows[i]["ZoneId"]">Edit</a></td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>
<a href="/Admin/CreateZone">Add Zone</a>