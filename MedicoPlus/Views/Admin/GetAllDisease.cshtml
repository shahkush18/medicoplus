@using System.Data
@model DataTable
@{
    ViewBag.Title = "GetAllDisease";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<h2>GetAllDisease</h2>
<table class="table table-striped m-0">
    <thead>
        <tr>
            <th>Disease Id</th>
            <th>Disease Name</th>
            <th>IsActive</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i]["DiseaseId"]</td>
                <td>@Model.Rows[i]["DiseaseName"]</td>
                <td>@Model.Rows[i]["IsActive"]</td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>
