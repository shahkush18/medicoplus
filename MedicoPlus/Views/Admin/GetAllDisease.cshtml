@using System.Data
@model DataTable
@{
    ViewBag.Title = "GetAllDisease";
    Layout = "~/Views/Shared/_myTemplate.cshtml";
}

<h2>GetAllDisease</h2>
<table class="table table-striped m-0">
    <thead>
        <tr>
            <th>Sr No.</th>
            <th>Disease Name</th>
            <th>IsActive</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            int j = i + 1;
            <tr>
                <td>@j</td>
                <td><a href="/Admin/EditDisease/@Model.Rows[i]["DiseaseId"]">@Model.Rows[i]["DiseaseName"]</a></td>
                <td>@Model.Rows[i]["IsActive"]</td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>
<a href="/Admin/CreateDisease">Add Disease</a>
